<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- TÃTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona apps a escanear"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- WHATSAPP -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="#25D366">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconWhatsapp"
                android:layout_width="39dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_whatsapp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iconWhatsapp"
                android:text="WhatsApp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:checked="true" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- TELEGRAM -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#444444"
        android:alpha="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconTelegram"
                android:layout_width="39dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_telegram"
                app:tint="#AAAAAA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iconTelegram"
                android:text="Telegram"
                android:textSize="16sp"
                android:textColor="#AAAAAA"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbTelegram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:enabled="false" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- INSTAGRAM -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#444444"
        android:alpha="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconInstagram"
                android:layout_width="39dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_instagram"
                app:tint="#AAAAAA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iconInstagram"
                android:text="Instagram"
                android:textSize="16sp"
                android:textColor="#AAAAAA"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:enabled="false" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
