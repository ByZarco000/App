<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp">

    <!-- NOMBRE APP -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="All Recovery"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <!-- TARJETA PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- FONDO AZUL -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#151E73"/>

            <!-- ICONO DECORATIVO ARRIBA IZQUIERDA -->
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="start|top"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-20dp"
                android:alpha="0.12"
                android:src="@drawable/ic_trash"
                tools:srcCompat="@drawable/ic_image_search"
                tools:ignore="ContentDescription,VisualLintBounds" />

            <!-- CONTENIDO -->
            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="184dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp"
                tools:ignore="VisualLintBounds">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recuperar Fotos Eliminadas"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Escaneo rápido • Sin pérdida de calidad"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- ICONO PRINCIPAL -->
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_trash"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- VIDEOS -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVideos"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C1F26"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_video"
                app:tint="#FFFFFF"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="Recuperar Videos Borrados"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.7"
                android:src="@drawable/ic_arrow"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- AUDIOS -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAudios"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardVideos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C1F26"
            android:gravity="center_vertical"
            android:importantForAccessibility="no"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_audio"
                app:tint="#FFFFFF"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="Recuperar Audios y Notas de Voz"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.7"
                android:src="@drawable/ic_arrow"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
